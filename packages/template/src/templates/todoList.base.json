{
  "hello": {
    "tables": {
      "world": {
        "schema": {
          "title": {
            "type": "string",
            "constraint": {
              "max": 20
            },
            "display": true
          },
          "description": {
            "type": "longText",
            "option": {
              "allowRichText": true
            }
          },
          "status": {
            "id": "status",
            "type": "select",
            "constraint": {
              "max": 1
            },
            "option": {
              "options": [
                {
                  "id": "todo",
                  "color": "blue",
                  "name": "Todo"
                },
                {
                  "id": "in_progress",
                  "color": "yellow",
                  "name": "In Progress"
                },
                {
                  "id": "done",
                  "color": "green",
                  "name": "Done"
                }
              ]
            }
          }
        },
        "views": {
          "grid": {
            "type": "grid"
          },
          "kanban": {
            "type": "kanban",
            "kanban": {
              "field": "status"
            }
          },
          "gallery": {
            "type": "gallery"
          }
        },
        "forms": {
          "form": {}
        },
        "records": [
          {
            "title": "Create a new project",
            "description": "Create a new project for the client",
            "status": "todo"
          }
        ]
      }
    }
  }
}
